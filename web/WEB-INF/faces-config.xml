<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <application>
        <!--indique le package avec les fichiers de langue (chargement global)-->
        <resource-bundle>
            <base-name>ch.motoloc.gestion.presentation.bundle.Resources</base-name>
            <!--variable qui permet d'accéder aux couples clé/valeur des fichiers de langue-->
            <var>resrc</var>
        </resource-bundle>
        
        <!--indique la langue par défaut et les langues supportées par l'application-->
        <locale-config>
            <default-locale>fr</default-locale>
            <supported-locale>fr</supported-locale>
        </locale-config>
    </application>
    
    <navigation-rule>
        <navigation-case>
            <from-outcome>accueilMenu</from-outcome>
            <to-view-id>/accueil.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{clientBean.ajouterClient()}</from-action>
            <from-outcome>editClient</from-outcome>
            <to-view-id>/editClient.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>editMotoMenu</from-outcome>
            <to-view-id>/editMoto.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>listeClientsMenu</from-outcome>
            <to-view-id>/filtreClient.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>listeMotosMenu</from-outcome>
            <to-view-id>/filtreMoto.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/filtreClient.xhtml</from-view-id>
        <!-- Cas de navigation :  méthode d'ajout de client renvoie "succes" -->
        <navigation-case>
            <from-action>#{ListeClientBean.rechercherClient(nom, prenom, email)}</from-action>
            <from-outcome>succes</from-outcome>
            <to-view-id>/listeClients.xhtml</to-view-id>
        </navigation-case>
        <!-- Cas de navigation : méthode d'ajout de client renvoie "erreur" -->
         <navigation-case>
            <from-action>#{ListeClientBean.rechercherClient(nom, prenom, email)}</from-action>
            <from-outcome>erreur</from-outcome>
            <to-view-id>/filtreClient.xhtml</to-view-id>
        </navigation-case>
        
        <navigation-case>
            <from-outcome>annuler</from-outcome>
            <to-view-id>/accueil.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/editClient.xhtml</from-view-id>
        <!-- Cas de navigation :  méthode d'ajout de client renvoie "succes" -->
        <navigation-case>
            <from-outcome>succes</from-outcome>
            <to-view-id>/listeClients.xhtml</to-view-id>
        </navigation-case>
        <!-- Cas de navigation : méthode d'ajout de client renvoie "erreur" -->
        <navigation-case>
            <from-outcome>erreur</from-outcome>
            <to-view-id>/editClient.xhtml</to-view-id>
        </navigation-case>
        
        <navigation-case>
            <from-outcome>annuler</from-outcome>
            <to-view-id>/accueil.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/editMoto.xhtml</from-view-id>
        <!-- Cas de navigation :  méthode d'ajout de client renvoie "succes" -->
        <navigation-case>
            <from-outcome>succes</from-outcome>
            <to-view-id>/listeMotos.xhtml</to-view-id>
        </navigation-case>
        <!-- Cas de navigation : méthode d'ajout de client renvoie "erreur" -->
        <navigation-case>
            <from-outcome>erreur</from-outcome>
            <to-view-id>/editMoto.xhtml</to-view-id>
        </navigation-case>
        
        <navigation-case>
            <from-outcome>annuler</from-outcome>
            <to-view-id>/accueil.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    

    <navigation-rule>
        <from-view-id>/listeClients.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>succes</from-outcome>
            <to-view-id>/listeClients.xhtml</to-view-id>
        </navigation-case>
        <!-- Cas de navigation : méthode d'ajout de client renvoie "erreur" -->
        <navigation-case>
            <from-outcome>erreur</from-outcome>
            <to-view-id>/listeClients.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{clientBean.ajouterClient()}</from-action>
            <from-outcome>editClient</from-outcome>
            <to-view-id>/editClient.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{clientBean.editerClient(client)}</from-action>
            <from-outcome>editClient</from-outcome>
            <to-view-id>/editClient.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{clientBean.supprimerClient(client)}</from-action>
            <from-outcome>suppression</from-outcome>
            <to-view-id>/listeClients.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{clientBean.detailClient(client)}</from-action>
            <from-outcome>detailClient</from-outcome>
            <to-view-id>/detailClient.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>  
     <navigation-rule>
        <from-view-id>/ajoutPack.xhtml</from-view-id>
        <!-- Cas de navigation :  retour a l'accueil  -->
        <navigation-case>
            <from-outcome>annuler</from-outcome>
            <to-view-id>/accueil.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>  
    
     <navigation-rule>
        <from-view-id>/detailClient.xhtml</from-view-id>
        <!-- Cas de navigation :  méthode d'ajout de client renvoie "succes" -->
        <navigation-case>
            <from-outcome>ajoutPack</from-outcome>
            <to-view-id>/ajoutPack.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
